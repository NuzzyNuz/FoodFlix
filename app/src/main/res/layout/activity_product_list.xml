<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listProductLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="true"
    android:orientation="vertical"
    android:paddingStart="20dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/textViewProductBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textSize="16sp" />


    <com.nex3z.flowlayout.FlowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:longClickable="true"
        app:flChildSpacing="5dp"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="1dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPeanut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="peanut"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="milk"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wheat"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipsoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="soy"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipshellFish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shellFish"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipegg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="egg"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipfish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fish"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chippork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pork"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipalcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alcohol"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chippoultry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="poultry"
            android:visibility="gone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipbeef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beef"
            android:visibility="gone" />

    </com.nex3z.flowlayout.FlowLayout>

</LinearLayout>