<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">


    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.addproduct.AddProductFragment">

        <TextView
            android:id="@+id/TVproductnameU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-black"
            android:paddingStart="@dimen/margin_20"
            android:paddingTop="10dp"
            android:text="@string/enter_product_name"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/editTextProductNameU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TVproductnameU"
            android:layout_marginStart="@dimen/margin_20"
            android:autofillHints="Enter Product Name"
            android:hint="@string/enter_product_name"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/categoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextProductNameU"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-black"
            android:paddingStart="@dimen/margin_20"
            android:paddingTop="10dp"
            android:text="SELECT PRODUCT CATEGORY" />

        <Spinner
            android:id="@+id/spinnerCategoryU"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_below="@id/categoryTV"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="10dp"
            android:background="@color/textViewBackground"
            android:entries="@array/product_category" />


        <TextView
            android:id="@+id/textView3U"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerCategoryU"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:paddingStart="@dimen/margin_20"
            android:text="@string/select_ingredients_included"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />


        <LinearLayout
            android:id="@+id/thirdLayoutU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3U"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxPeanutPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/peanut" />

                <CheckBox
                    android:id="@+id/checkBoxMilkPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/milk" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxWheatPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/wheat" />

                <CheckBox
                    android:id="@+id/checkBoxSoyPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/soy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxShellFishPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/shell_fish" />

                <CheckBox
                    android:id="@+id/checkBoxEggPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/egg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxFishPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/fish" />

                <CheckBox
                    android:id="@+id/checkBoxPorkPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/pork" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxAlcoholPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/alcohol" />

                <CheckBox
                    android:id="@+id/checkBoxPoultryPU"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/poultry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxBeefPU"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/beef" />

            </LinearLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbarImgU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/update"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonDeleteProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent_blue"
            android:text="@string/delete"
            android:textColor="@color/colorPrimary"
            tools:ignore="ButtonStyle" />

    </LinearLayout>


</LinearLayout>